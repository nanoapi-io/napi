{
  "name": "@nanoapi.io/napi",
  "version": "0.0.4",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "napi": "dist/index.js"
  },
  "pkg": {
    "assets": [
      "../../node_modules/tree-sitter/**/*",
      "../../node_modules/openai/**/*",
      "dist/**/*"
    ],
    "targets": [
      "node16-linux-x64",
      "node16-macos-x64",
      "node16-win-x64"
    ],
    "outputPath": "binaries"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
      "commitMessage": "[skip ci] chore: release v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "assets": [
        "binaries/**/*"
      ]
    },
    "npm": {
      "publish": true,
      "allowSameVersion": true
    },
    "plugins": {
      "@release-it/bumper": {
        "in": "package.json",
        "out": "package.json"
      },
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md",
        "addUnreleased": true
      }
    }
  },
  "scripts": {
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "npm:publish": "npm publish",
    "binaries:build": "pkg ./package.json",
    "release": "npx release-it"
  },
  "devDependencies": {
    "@release-it/bumper": "^6.0.1",
    "@release-it/keep-a-changelog": "^5.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^18.19.54",
    "@types/prompts": "^2.4.9",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.33",
    "nodemon": "^3.1.7",
    "pkg": "^5.8.1",
    "prettier": "3.3.3",
    "release-it": "^17.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dependency-tree": "^11.0.1",
    "express": "^4.21.1",
    "http-proxy-middleware": "^3.0.3",
    "openai": "^4.67.2",
    "prompts": "^2.4.2",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.23.0",
    "tree-sitter-typescript": "^0.23.0",
    "uuid": "^10.0.0",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  }
}
